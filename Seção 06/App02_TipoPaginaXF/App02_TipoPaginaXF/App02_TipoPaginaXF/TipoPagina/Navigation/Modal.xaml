             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             BackgroundColor="LightSkyBlue"
             x:Class="App02_TipoPaginaXF.TipoPagina.Navigation.Modal">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightSkyBlue" VerticalOptions="CenterAndExpand">
            <StackLayout HeightRequest="50" BackgroundColor="Transparent" HorizontalOptions="CenterAndExpand">
